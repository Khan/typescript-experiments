{
    "compilerOptions": {
        // "moduleResolution": "node",
        "target": "es2018",
        "module": "system",
        "sourceMap": true,
        "paths": {
            "csstype": ["node_modules/csstype"] // This mapping is relative to "baseUrl"
        },
